<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCrash"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Make Native Crash"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/hprof"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Pull hprof file of bitmap"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/monitorCpuOfIo"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Monitor CPU of IO opertation"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/monitorCpuOfGc"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Monitor CPU of GC opertation"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/nativeHook"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Start Native Hook(PLT)"
        android:textAllCaps="false" />

</LinearLayout>